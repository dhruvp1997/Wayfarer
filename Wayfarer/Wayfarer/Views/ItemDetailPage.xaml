<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wayfarer.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ScrollView>
    <StackLayout Spacing="20" Padding="15">
        <Image Source="{Binding Image}" VerticalOptions="Center" HeightRequest="250" WidthRequest="250" />
        <Label Text="Place:" FontSize="Medium" TextColor="DarkRed" />
        <Label Text="{Binding Text}" FontSize="Small" TextColor="DarkBlue"/>
        <Label Text="Description:" FontSize="Medium" TextColor="DarkRed" />
        <Label Text="{Binding Description}" FontSize="Small" TextColor="DarkBlue"/>
    </StackLayout>
    </ScrollView>
</ContentPage>